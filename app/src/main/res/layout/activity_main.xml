<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_container_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/color_main_theme"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/dp_50"
        android:textSize="@dimen/font_18" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="@string/contacts" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_blocked_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flavor_blocked_numbers" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_bilibili"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/flavor_bilibili" />

</LinearLayout>